<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    tools:context=".view.ui.MantInsumoActivity">

    <TextView
        android:id="@+id/textView43"
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="INSUMO"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back_mantinsumo"
        app:layout_constraintStart_toEndOf="@+id/iv_back_mantinsumo"
        app:layout_constraintTop_toTopOf="@+id/iv_back_mantinsumo" />

    <ImageView
        android:id="@+id/iv_back_mantinsumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back2" />

    <ImageView
        android:id="@+id/iv_img_mantinsumo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_mantinsumo"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/et_nombre_mantinsumo"
        style="@style/RoundedLigthEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="@string/tx_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img_mantinsumo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_img_mantinsumo"
        app:layout_constraintTop_toTopOf="@+id/iv_img_mantinsumo" />

    <ImageView
        android:id="@+id/iv_upload_mantinsumo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="-20dp"
        android:background="@color/shadow_field"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img_mantinsumo"
        app:layout_constraintStart_toStartOf="@+id/iv_img_mantinsumo"
        app:srcCompat="@drawable/ic_upload" />

    <ImageButton
        android:id="@+id/ib_add_mantinsumo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/add"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_mantinsumo"
        app:layout_constraintTop_toBottomOf="@+id/iv_upload_mantinsumo"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_update_mantinsumo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/update"
        android:padding="3dp"
        app:layout_constraintEnd_toStartOf="@+id/ib_add_mantinsumo"
        app:layout_constraintTop_toTopOf="@+id/ib_add_mantinsumo"
        app:srcCompat="@drawable/ic_update"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ib_delete_mantinsumo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/delete"
        android:padding="3dp"
        app:layout_constraintEnd_toStartOf="@+id/ib_update_mantinsumo"
        app:layout_constraintTop_toTopOf="@+id/ib_update_mantinsumo"
        app:srcCompat="@drawable/ic_delete"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_insumos_mantinsumo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_update_mantinsumo" />
</androidx.constraintlayout.widget.ConstraintLayout>