<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_layout"
    tools:context=".view.ui.DetailTortaPersonalizadaActivity">

    <ImageView
        android:id="@+id/iv_backtorta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nombretorta"
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="TORTA ABC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_backtorta" />

    <ImageView
        android:id="@+id/iv_imagetorta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/catbaker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombretorta" />

    <TextView
        android:id="@+id/tv_descripciontorta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Turpis donec quam posuere ac leo id odio nisl sed."
        app:layout_constraintBottom_toBottomOf="@+id/iv_imagetorta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_imagetorta"
        app:layout_constraintTop_toTopOf="@+id/iv_imagetorta" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>