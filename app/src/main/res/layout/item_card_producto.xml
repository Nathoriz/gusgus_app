<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

       <TextView
           android:id="@+id/txtNombreTorta"
           style="@style/SubtitleStyle"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:background="@drawable/custom_card_producto"
           android:fontFamily="@font/rancho"
           android:gravity="bottom|center"
           android:paddingBottom="16dp"
           android:text="No hay torta!"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />

       <com.rishabhharit.roundedimageview.RoundedImageView
           android:id="@+id/ivtorta"
           android:layout_width="120dp"
           android:layout_height="150dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginBottom="50dp"
           app:cornerRadius="15dp"
           android:foregroundGravity="center"
           android:scaleType="centerCrop"
           app:circularflow_radiusInDP="15dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           tools:srcCompat="@tools:sample/avatars"
           tools:visibility="invisible" />

       <ProgressBar
           android:id="@+id/progressBar"
           style="?android:attr/progressBarStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="@+id/txtNombreTorta"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <TextView
           android:id="@+id/txterror"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="32dp"
           android:text="TextView"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>